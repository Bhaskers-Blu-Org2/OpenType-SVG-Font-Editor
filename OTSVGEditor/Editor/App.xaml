<Application
    x:Class="Editor.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Editor"
    RequestedTheme="Light">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!--Set the accent color-->
            <Color x:Key="SystemAccentColor">#32318c</Color>
            <Color x:Key="SystemAltHighColor">#32318c</Color>
            <Color x:Key="SystemAltLowColor">#32318c</Color>
            <Color x:Key="SystemAltMediumColor">#32318c</Color>
            <Color x:Key="SystemAltMediumHighColor">#32318c</Color>
            <Color x:Key="SystemAltMediumLowColor">#32318c</Color>

        </ResourceDictionary>
    </Application.Resources>

</Application>
